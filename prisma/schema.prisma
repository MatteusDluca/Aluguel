generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  cpf       String   @unique
  happyday  String
  tell      Int      @unique
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // stockId       Stock[]
  address   Address  @relation(fields: [addressId], references: [id])
  addressId String

  @@map("users")
}

model Address {
  id         String  @id @default(uuid())
  num        Int
  street     String
  cep        String
  complement String?
  User       User[]
}

